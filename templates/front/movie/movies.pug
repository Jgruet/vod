each movie in movies
    .col-12.col-md-6.col-lg-4
        article(data-id=movie.id data-tmdb-id=movie.id_tmdb href=`/film/${movie.id_tmdb}`)
            img(src=movie.affiche)
            .info-movie
                h4= movie.title
                small
                    span Avec 
                    ul 
                        each actor in movie.actors 
                            li= actor
            if movie.ba
                iframe(width='100%' height="50%" src='https://www.youtube.com/embed/'+movie.ba+'?controls=0' title='YouTube video player' frameborder='0' allow='accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture' allowfullscreen='')