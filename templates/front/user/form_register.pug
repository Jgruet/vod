extends ../layout.pug
 
block content   
    h1 Inscription
 
    if error
        .alert.alert-danger(role="alert")  #{error}
    form(method="post")
        .form-group
            label(for="firstname") Prénom
            input.form-control(type="text" id="firstname" name="firstname" placeholder="Votre prénom" required="true" value=firstname)
        .form-group
            label(for="lastname") Nom
            input.form-control(type="text" id="lastname" name="lastname" placeholder="Votre nom" required="true" value=lastname)
        .form-group
            label(for="email") Adresse E-mail
            input.form-control(type="email" id="email" name="email" placeholder="Votre adresse email" required="true" value=email)
        .form-group
            label(for="password")
            input.form-control(type="password" id="password" name="password" placeholder="Choisissez un mot de passe" required="true" )
 
        .form-group
            button.btn.btn-primary(type="submit") S'inscrire